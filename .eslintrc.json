{
  "env": {
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "quotes": "error",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true
      }
    ],
    "import/order": 
    [
      "error", 
      { "groups": 
          [
            "external", 
            "builtin", 
            "internal", 
            "sibling", 
            "parent", 
            "index"
          ]
      } 
    ] 
  }
}
